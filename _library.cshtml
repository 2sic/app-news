@using System.Text.RegularExpressions

@functions {
    public string LinkToPage(int tabId, string param1, string param2)
    {
        var result = DotNetNuke.Common.Globals.NavigateURL(tabId, "", new string[] { param1, param2 });
        return result;
    }

    public string StripHTML(string input)
    {
    return Regex.Replace(input, "<.*?>", String.Empty);
    }
}