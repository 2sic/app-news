@inherits ToSic.Sxc.Dnn.RazorComponent
@using ToSic.Razor.Blade;
@using ToSic.Sxc.Search;
@using ToSic.Eav.Run;

@*
  Case #1: Bootstrap 3 - read the readme.md section "CSS Framework Detection"
*@
@if(Connect.Koi.Koi.Is("bs3")) {
  @RenderPage("bs3/_List Columns without images.cshtml")
  return;
}
@*
  Case #2: Bootstrap 4 or Unknown CSS Framework
*@
@*
  The columns view is identical only difference is that it shows the article images
*@

@RenderPage("shared/_News List.cshtml", new {ShowImages = false, UseColumns = true, ShowCatPicker = false})

@functions{
  /// <summary>
  /// Prevent duplicated search results.
  /// Since the main list will already add all the items to the search, this view should not add them again.
  /// </summary>
  public override void CustomizeSearch(Dictionary<string, List<ISearchItem>> searchInfos, IContainer moduleInfo, DateTime beginDate) {
    searchInfos.Clear();
  }
}
