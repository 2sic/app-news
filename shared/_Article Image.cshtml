@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;
@{
  var article = DynamicModel.Article;
  var imageField = article.Field("Image");
  var image = Text.Has(article.Image) ? imageField : Resources.PlaceholderMissingImage;
  var altText = Text.Has(article.Image) ? Text.First(imageField.Metadata.Description, article.Title) : article.Title;
}

<div class="app-news5-img">
  <span class="overlay"></span>
  @Kit.Image.Picture(image, width:"800", settings: "Content", imgAlt: altText)
</div>